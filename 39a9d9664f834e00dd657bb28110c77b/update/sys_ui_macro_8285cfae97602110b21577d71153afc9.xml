<?xml version="1.0" encoding="UTF-8"?><record_update table="sys_ui_macro">
    <sys_ui_macro action="INSERT_OR_UPDATE">
        <active>true</active>
        <category>general</category>
        <description>Bootstrap form-group with label, input and help-block with support for tooltip.&#13;
supported input types: input, password, checkbox &#13;
</description>
        <media_type/>
        <name>input_formgroup_tooltip</name>
        <scoped_name>x_pd_integration_input_formgroup_tooltip</scoped_name>
        <sys_class_name>sys_ui_macro</sys_class_name>
        <sys_created_by>PagerDuty_v8.0</sys_created_by>
        <sys_created_on>2023-01-25 17:25:08</sys_created_on>
        <sys_id>8285cfae97602110b21577d71153afc9</sys_id>
        <sys_mod_count>1</sys_mod_count>
        <sys_name>input_formgroup_tooltip</sys_name>
        <sys_package display_value="PagerDuty Incident Resolution Platform" source="x_pd_integration">39a9d9664f834e00dd657bb28110c77b</sys_package>
        <sys_policy/>
        <sys_scope display_value="PagerDuty Incident Resolution Platform">39a9d9664f834e00dd657bb28110c77b</sys_scope>
        <sys_update_name>sys_ui_macro_8285cfae97602110b21577d71153afc9</sys_update_name>
        <sys_updated_by>PagerDuty_v8.0</sys_updated_by>
        <sys_updated_on>2023-01-25 17:25:56</sys_updated_on>
        <xml><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
  <div class="form-group">
    <j:if test="${HTML:jvar_type != 'checkbox'}">
      <j:if test="${HTML:jvar_name == 'instance_url'}">
        <label class="control-label" for="${HTML:jvar_name}">PagerDuty account URL (https://<strong>subdomain</strong>.pagerduty.com)</label>
      </j:if>
      <j:if test="${HTML:jvar_name != 'instance_url'}">
        <label class="control-label" for="${HTML:jvar_name}">${HTML:jvar_label}</label>
      </j:if>
      <j:if test="${HTML:jvar_name == 'api_key' || jvar_name == 'sn_auth_userpwd'}">
        <input type="${HTML:jvar_type}" class="form-control" name="${HTML:jvar_name}" placeholder="${HTML:jvar_placeholder}" aria-describedby="${HTML:jvar_name}_help" value="${HTML:jvar_value}" autocomplete="off"/>
      </j:if>
      <j:if test="${HTML:jvar_name != 'api_key' &amp;&amp; jvar_name != 'sn_auth_userpwd' }">
        <input type="${HTML:jvar_type}" class="form-control" name="${HTML:jvar_name}" placeholder="${HTML:jvar_placeholder}" aria-describedby="${HTML:jvar_name}_help" value="${HTML:jvar_value}"/>
      </j:if>
    </j:if>
    <j:if test="${HTML:jvar_type == 'checkbox'}">
      <div class="checkbox">
        <label>
          <j:if test="${HTML:jvar_value == 'true'}">
            <input type="${HTML:jvar_type}" name="${HTML:jvar_name}" aria-describedby="${HTML:jvar_name}_help" checked="" value="true" />
          </j:if>
          <j:if test="${HTML:jvar_value != 'true'}">
            <input type="${HTML:jvar_type}" name="${HTML:jvar_name}" aria-describedby="${HTML:jvar_name}_help" value="true" />
          </j:if>
          <input type="hidden" name="${HTML:jvar_name}" aria-describedby="${HTML:jvar_name}_help"  value="false" />
          ${HTML:jvar_label}
          <div class="sn-tooltip-basic pull-right" style="margin-left: 8px;" title="${HTML:jvar_tooltip_title}" data-toggle="tooltip" data-placement="auto">
            <a target="${HTML:jvar_tooltip_target}" style="color: #222" href="${HTML:jvar_tooltip_href}">
              <i class="${HTML:jvar_tooltip_icon}"></i>
            </a>
          </div>
        </label>
      </div>
    </j:if>
    <span id="${HTML:jvar_name}_help" class="help-block"></span>
  </div>
</j:jelly>
]]></xml>
    </sys_ui_macro>
</record_update>
