        <sys_updated_on>2023-10-30 09:43:25</sys_updated_on>
        <xml><![CDATA[<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">
  <j:if test="${HTML:jvar_show_popover_button == 'false'}">
    <j:set var="jvar_disable" value="disabled" />
  </j:if>
  <div class="form-group">
    <div class="checkbox">
      <label>
        <j:if test="${HTML:jvar_value == 'true'}">
          <input type="${HTML:jvar_type}" name="${HTML:jvar_name}" aria-describedby="${HTML:jvar_name}_help" checked="checked" value="true" disabled="${HTML:jvar_disable}" />
          <j:if test="${HTML:jvar_disable == 'disabled'}">
            <input type="hidden" name="${HTML:jvar_name}" value="true" />
          </j:if>
        </j:if>
        <j:if test="${HTML:jvar_value != 'true'}">  
          <input type="${HTML:jvar_type}" name="${HTML:jvar_name}" aria-describedby="${HTML:jvar_name}_help" value="true" disabled="${HTML:jvar_disable}" />
        </j:if>
        <input type="hidden" name="${HTML:jvar_name}" aria-describedby="${HTML:jvar_name}_help"  value="false" />
        ${HTML:jvar_label}
      </label>
      <j:if test="${HTML:jvar_show_popover_button == 'false'}">
        <span style="margin-left:5px;" type="button" data-placement="bottom" data-target="#${HTML:jvar_name}_popover" class="sn-popover-basic ${HTML:jvar_popover_icon}" data-toggle="popover"></span>
      </j:if>
    </div>
    <span id="${HTML:jvar_name}_help" class="help-block"></span>
  </div>
  <j:if test="${HTML:jvar_show_popover_button == 'false'}">
    <div id="${HTML:jvar_name}_popover">
      <b>${HTML:jvar_popover_header}</b>
      <div class="popover-body"> ${HTML:jvar_popover_body}<br />
        <div class="pull-left">
          <button type="button" class="btn btn-default" data-dismiss="popover" onclick='g_navigation.open("${HTML:jvar_popover_onclick_url}", "_blank")'> ${HTML:jvar_popover_button}</button>
        </div>
      </div>
    </div>
  </j:if>
</j:jelly>
]]></xml>
    </sys_ui_macro>
</record_update>
