<?xml version="1.0" encoding="UTF-8"?><record_update table="sys_ui_macro">
    <sys_ui_macro action="INSERT_OR_UPDATE">
        <active>true</active>
        <category>general</category>
        <description>Bootstrap form-group with label, input and help-block with support for popover element.&#13;
supported input types: input, password, checkbox </description>
        <media_type/>
        <name>input_formgroup_popover</name>
        <scoped_name>x_pd_integration_input_formgroup_popover</scoped_name>
        <sys_class_name>sys_ui_macro</sys_class_name>
        <sys_created_by>PagerDuty_v8.0</sys_created_by>
