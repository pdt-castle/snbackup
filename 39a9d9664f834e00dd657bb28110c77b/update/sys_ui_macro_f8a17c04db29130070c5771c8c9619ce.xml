        <xml>&lt;?xml version="1.0" encoding="utf-8" ?&gt;
&lt;j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null"&gt;
  &lt;div class="form-group"&gt;
    &lt;label class="control-label" for="${HTML:jvar_name}"&gt;${HTML:jvar_label}&lt;/label&gt;
    &lt;select class="form-control" name="${HTML:jvar_name}"&gt;
      &lt;j:forEach items="${HTML:jvar_options}" var="jvar_option" indexVar="jvar_i"&gt;
        &lt;j:if test="${HTML:!empty(jvar_values)}"&gt;
          &lt;j:choose&gt;
            &lt;j:when test="${HTML:jvar_values[jvar_i] == 'sn_si_incident'}"&gt;
              &lt;j:choose&gt;
                &lt;j:when test="${HTML:jvar_disabled == 'true'}"&gt;
                  &lt;option disabled="true" value="${HTML:jvar_values[jvar_i]}"&gt;${HTML:jvar_option}&lt;/option&gt;
                &lt;/j:when&gt;
                &lt;j:otherwise&gt;
                  &lt;j:if test="${HTML:jvar_values[jvar_i] == jvar_value}"&gt;
                    &lt;option selected="selected" value="${HTML:jvar_values[jvar_i]}"&gt;${HTML:jvar_option}&lt;/option&gt;
                  &lt;/j:if&gt;
                  &lt;j:if test="${HTML:jvar_values[jvar_i] != jvar_value}"&gt;
                    &lt;option value="${HTML:jvar_values[jvar_i]}"&gt;${HTML:jvar_option}&lt;/option&gt;
                  &lt;/j:if&gt;
                &lt;/j:otherwise&gt;
              &lt;/j:choose&gt;
            &lt;/j:when&gt;
            &lt;j:otherwise&gt;
              &lt;j:if test="${HTML:jvar_values[jvar_i] == jvar_value}"&gt;
                &lt;option selected="selected" value="${HTML:jvar_values[jvar_i]}"&gt;${HTML:jvar_option}&lt;/option&gt;
              &lt;/j:if&gt;
              &lt;j:if test="${HTML:jvar_values[jvar_i] != jvar_value}"&gt;
                &lt;option value="${HTML:jvar_values[jvar_i]}"&gt;${HTML:jvar_option}&lt;/option&gt;
              &lt;/j:if&gt;
            &lt;/j:otherwise&gt;
          &lt;/j:choose&gt;
        &lt;/j:if&gt;
        &lt;j:if test="${HTML:empty(jvar_values)}"&gt;
          &lt;j:if test="${HTML:jvar_options[jvar_i] == jvar_value}"&gt;
            &lt;option selected="selected"&gt;${HTML:jvar_option}&lt;/option&gt;
          &lt;/j:if&gt;
          &lt;j:if test="${HTML:jvar_options[jvar_i] != jvar_value}"&gt;
            &lt;option&gt;${HTML:jvar_option}&lt;/option&gt;
          &lt;/j:if&gt;
        &lt;/j:if&gt;
      &lt;/j:forEach&gt;
    &lt;/select&gt;
    &lt;span id="${HTML:jvar_name}_help" class="help-block"&gt;&lt;/span&gt;
  &lt;/div&gt;
&lt;/j:jelly&gt;
</xml>
    </sys_ui_macro>
</record_update>
